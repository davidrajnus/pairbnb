<div class="row">
  <div class="col-md-12">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <% if @listing.images.present? %>
      <!-- Indicators -->
        <% @listing.images.each do |a| %>
          <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="<%= a %>"></li>
          </ol>
        <% end %>
      <% end %>
      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <% if @listing.images.present? %>
          <% @listing.images.each do |image| %>
            <div class="item <%= 'active' if image == @listing.images[0] %>">
              <%= image_tag image.url %>
            </div>
          <% end %>
        <% end %>
      </div>
      <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
    </div>
  </div>
</div>
<br>

<%if current_user == @listing.user_id%>
  <%= button_to 'Tag Something', new_listing_tag_path(@listing), method: :get %>
<%end%>

<%if current_user != @listing.user_id%>
  <%= render "bookings/form" %>
<%end%>





